rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - authenticated users can read all, write their own
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Music requests - authenticated users can create, all can read
    match /music/{musicId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      // DJs and admins can update/delete
      allow update, delete: if request.auth != null && 
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['dj', 'admin']);
    }
    
    // Chat messages - authenticated users can create, all can read
    match /chat/{messageId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      // Admins and teachers can delete
      allow delete: if request.auth != null && 
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'teacher']);
    }
    
    // Grades - teachers can create/update, students can read their own
    match /grades/{gradeId} {
      allow read: if request.auth != null && 
        (resource.data.studentId == request.auth.uid ||
         exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['teacher', 'admin']);
      allow create, update: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['teacher', 'admin'];
    }
    
    // Access logs - portÃ¡s and admins can create/read
    match /access/{accessId} {
      allow read, create: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'porter'];
      allow read: if request.auth != null && resource.data.studentId == request.auth.uid;
    }
    
    // Schedule - all authenticated users can read
    match /schedule/{scheduleId} {
      allow read: if request.auth != null;
      // Teachers and admins can update
      allow update: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['teacher', 'admin'];
    }
  }
}