rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {


    
    function isAuthenticated() {
      return request.auth != null;
    }

    
    function getRole() {
      return request.auth.token.role;
    }

    function isAdmin() {
      return isAuthenticated() && request.auth.token.role == 'admin';
    }

    function isTeacher() {
      return isAuthenticated() && 
        (request.auth.token.role == 'teacher' || 
         request.auth.token.role == 'homeroom_teacher');
    }

    function isHomeroomTeacher() {
      return isAuthenticated() && request.auth.token.role == 'homeroom_teacher';
    }

    function isStudent() {
      return isAuthenticated() && 
        (request.auth.token.role == 'student' || 
         request.auth.token.role == 'dj');
    }

    function isDJ() {
      return isAuthenticated() && request.auth.token.role == 'dj';
    }

    function hasRole(role) {
      return isAuthenticated() && request.auth.token.role == role;
    }

    
    function isValidRole(role) {
      return role in ['admin', 'teacher', 'homeroom_teacher', 'student', 'dj'];
    }

    function isValidGrade(grade) {
      return grade is int && grade >= 1 && grade <= 5;
    }

    function isValidEmail(email) {
      return email is string && email.size() > 0 && email.matches('.*@.*');
    }


    match /users/{userId} {
      
      allow read: if isAuthenticated();

    
      allow create: if isAuthenticated() && 
                       request.auth.uid == userId &&
                       isValidRole(request.resource.data.role) &&
                       isValidEmail(request.resource.data.email) &&
                       request.resource.data.fullName is string &&
                       request.resource.data.fullName.size() > 0;

      
      allow update: if (isAuthenticated() && request.auth.uid == userId) || isAdmin();

      
      allow delete: if isAdmin();
    }


    match /lessons/{lessonId} {
      
      allow read: if isAuthenticated();

      
      allow create: if isTeacher() &&
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.day is string &&
                       request.resource.data.startTime is string &&
                       request.resource.data.subject is string &&
                       request.resource.data.teacherName is string &&
                       request.resource.data.className is string;

    
      allow update: if (isTeacher() && resource.data.userId == request.auth.uid) || isAdmin();

      
      allow delete: if (isTeacher() && resource.data.userId == request.auth.uid) || isAdmin();
    }

    match /grades/{gradeId} {
  
      allow read: if isAuthenticated();

    
      allow create: if isTeacher() &&
                       isValidGrade(request.resource.data.grade) &&
                       request.resource.data.studentName is string &&
                       request.resource.data.subject is string &&
                       request.resource.data.title is string &&
                       request.resource.data.teacherName is string;

      
      allow update: if isTeacher() &&
                       resource.data.teacherName == request.auth.token.name &&
                       isValidGrade(request.resource.data.get('grade', resource.data.grade));

    
      allow delete: if isAdmin();
    }

    match /homework/{homeworkId} {
      
      allow read: if isAuthenticated();

      
      allow create: if isTeacher() &&
                       request.resource.data.teacherId == request.auth.uid &&
                       request.resource.data.title is string &&
                       request.resource.data.title.size() > 0 &&
                       request.resource.data.description is string &&
                       request.resource.data.dueDate is string &&
                       request.resource.data.className is string;

    
      allow update: if (isTeacher() && resource.data.teacherId == request.auth.uid) || isAdmin();

      
      allow delete: if (isTeacher() && resource.data.teacherId == request.auth.uid) || isAdmin();
    }


    match /homework-submissions/{submissionId} {
      
      allow read: if isAuthenticated();

      
      allow create: if isStudent() &&
                       request.resource.data.studentId == request.auth.uid &&
                       request.resource.data.homeworkId is string &&
                       request.resource.data.studentName is string;

    
      allow update: if (isStudent() && resource.data.studentId == request.auth.uid) ||
                       isTeacher() ||
                       isAdmin();

    
      allow delete: if isAdmin();
    }


    match /attendance/{attendanceId} {
    
      allow read: if isAuthenticated();

  
      allow create: if isTeacher() &&
                       request.resource.data.teacherId == request.auth.uid &&
                       request.resource.data.lessonId is string &&
                       request.resource.data.date is string &&
                       request.resource.data.className is string &&
                       request.resource.data.students is list;

    
      allow update: if (isTeacher() && resource.data.teacherId == request.auth.uid) || isAdmin();

      
      allow delete: if isAdmin();
    }

    match /absences/{absenceId} {
    
      allow read: if isAuthenticated();

    
      allow create: if isTeacher() &&
                       request.resource.data.teacherId == request.auth.uid &&
                       request.resource.data.studentId is string &&
                       request.resource.data.studentName is string &&
                       request.resource.data.date is string;

      
      allow update: if isTeacher() || isAdmin();

    
      allow delete: if isAdmin();
    }

    match /excuses/{excuseId} {
      
      allow read: if isTeacher() || isAdmin();

    
      allow create: if isStudent() &&
                       request.resource.data.studentId == request.auth.uid &&
                       request.resource.data.excuseType is string &&
                       request.resource.data.absenceIds is list;

   
      allow update: if isTeacher() || isAdmin();

  
      allow delete: if isTeacher() || isAdmin();
    }

    match /chatMessages/{messageId} {

      allow read: if isAuthenticated();

    
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.message is string &&
                       request.resource.data.message.size() > 0 &&
                       request.resource.data.message.size() <= 1000 &&
                       request.resource.data.userName is string;

      
      allow update: if (isAuthenticated() && resource.data.userId == request.auth.uid) || isAdmin();

  
      allow delete: if (isAuthenticated() && resource.data.userId == request.auth.uid) || isAdmin();
    }

    match /musicRequests/{requestId} {
      
      allow read: if isAuthenticated();

      
      allow create: if isStudent() &&
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.url is string &&
                       request.resource.data.platform is string;

    
      allow update: if isDJ() || isAdmin();

      
      allow delete: if isDJ() || isAdmin();
    }

    match /scheduleChanges/{changeId} {
      
      allow read: if isAuthenticated();

      
      allow create: if isAdmin() &&
                       request.resource.data.teacherId is string &&
                       request.resource.data.date is string &&
                       request.resource.data.timeSlot is string &&
                       request.resource.data.changeType in ['cancelled', 'substituted', 'added'];

      
      allow update: if isAdmin();

    
      allow delete: if isAdmin();
    }


    match /access/{accessId} {
    
      allow read: if isAdmin();

    
      allow create: if isAuthenticated() &&
                       request.resource.data.studentId is string &&
                       request.resource.data.date is string;

      allow update: if isAdmin();

    
      allow delete: if isAdmin();
    }


    match /accessLogs/{logId} {
    
      allow read: if isAdmin();

    
      allow create: if isAuthenticated();

    
      allow update: if isAdmin();

    
      allow delete: if isAdmin();
    }

  
    match /systemLogs/{logId} {
  
      allow read: if isAdmin();

      
      allow create: if isAuthenticated();

      
      allow update: if isAdmin();

  
      allow delete: if isAdmin();
    }


    match /schedule-changes/{changeId} {
      
      allow read: if isAuthenticated();

      
      allow create: if isAdmin();

      
      allow update: if isAdmin();

      
      allow delete: if isAdmin();
    }

  
  }
}